      //$ht .= preg_replace('#(<[a-z ]*)(size=("|\')(.*?)("|\'))([a-z ]*>)#', '\\1\\6', $h);
      //$htm .= preg_replace('#(<[a-z ]*)(class=("|\')(.*?)("|\'))([a-z ]*>)#', '\\1\\6', $ht);



      $html = preg_replace("/<(?!table|img)([a-z][a-z0-9]*)[^>]*?(\/?)>/i",'<$1$2>', $node->body);
